<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- Extend Sale Order Form View -->
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <!-- Insert Delivery Instructions Field After Partner Invoice Field -->
                <xpath expr="//sheet/notebook/page[1]/group[field[@name='partner_invoice_id']]" position="after">
                    <field name="delivery_instructions"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>